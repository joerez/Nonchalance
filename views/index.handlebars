    {{> moviescript}}


    <script>

    var video = document.getElementById("myVideo");
    var btn = document.getElementById("myBtn");


    function mutethis() {
  if (video.muted) {
      video.muted = false;
      btn.innerHTML = "MUTE";
  } else {
      video.muted = true;
      btn.innerHTML = "UNMUTE";
  }
}
